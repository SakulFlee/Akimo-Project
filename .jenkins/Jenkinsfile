pipeline {
    agent {
        label 'docker'
    }
    stages {
        stage('Test') {
            agent {
                docker { 
                    image 'rust:latest' 
                    reuseNode true
                }
            }
            steps {
                sh 'rustc --version'
                sh 'cargo --version'
                sh 'rustup --version'
            }
        }
    }
}