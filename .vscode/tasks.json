{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Debug Build",
            "command": "cargo build",
            "type": "shell",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Release Build",
            "command": "cargo build --release",
            "type": "shell",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "Debug Run",
            "command": "cargo run",
            "type": "shell",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Release Run",
            "command": "cargo run --release",
            "type": "shell",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "test"
        },
    ]
}