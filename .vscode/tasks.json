{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // --- Builds ---
        {
            "label": "[Workspace] Build",
            "type": "shell",
            "command": "cargo build --workspace",
            "group": "build"
        },
        // --- Android Installs ---
        {
            "label": "[Example: Clear Screen] Install on Android",
            "type": "shell",
            "command": "./gradlew installDebug",
            "group": "test",
            "options": {"cwd": "Examples/ClearScreen/android"}
        },
        {
            "label": "[Example: Clear Screen] Run on Android",
            "type": "shell",
            "command": "adb shell am start -n de.sakulflee.akimoproject.example.clear_screen/android.app.NativeActivity; adb logcat -e de.sakulflee.akimoproject.example.clear_screen",
            "group": "test",
            "dependsOn": "[Example: Clear Screen] Install on Android"
        },
        {
            "label": "[Example: Triangle] Install on Android",
            "type": "shell",
            "command": "./gradlew installDebug",
            "group": "test",
            "options": {"cwd": "Examples/Triangle/android"}
        },
        {
            "label": "[Example: Triangle] Run on Android",
            "type": "shell",
            "command": "adb shell am start -n de.sakulflee.akimoproject.example.triangle/android.app.NativeActivity; adb logcat -e de.sakulflee.akimoproject.example.triangle",
            "group": "test",
            "dependsOn": "[Example: Triangle] Install on Android"
        },
        // --- Tests ---
        {
            "label": "[Workspace] Test",
            "type": "shell",
            "command": "cargo test --workspace",
            "group": "test"
        }
    ]
}
